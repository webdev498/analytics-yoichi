<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>web</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${artifactId}-${version}-${buildNumber}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/dist</directory>
            <outputDirectory>dist</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/_translations</directory>
            <outputDirectory>_translations</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/build</directory>
            <outputDirectory>build</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/commons</directory>
            <outputDirectory>commons</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/config</directory>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/interfaces</directory>
            <outputDirectory>interfaces</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/scripts</directory>
            <outputDirectory>scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/server</directory>
            <outputDirectory>server</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/node_modules</directory>
            <outputDirectory>node_modules</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/package.json</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>${basedir}/.babelrc</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
</assembly>
