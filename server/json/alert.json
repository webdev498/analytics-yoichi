{
  "layout": [
    [
      {
        "meta": {
          "showHeader": true,
          "showRefresh": false,
          "showBackButton": true,
          "api": {
            "path": "/api/alert/{alertId}",
            "pathParams": {
              "alertId": ":pathParam"
            },
            "queryParams": {
              "date": "date:pathParam",
              "window": ""
            }
          },
          "title": "Alert Detail",
          "fetchDataFor": [
            {
              "id": "alert-activity",
              "api": {
                "method": "POST",
                "path": "/api/analytics/reporting/executeById",
                "body": "data.rank_alert.chartsFilter$customParam",
                "pathParams": {},
                "queryParams": {
                  "window": ""
                },
                "loadOnce": true
              }
            },
            {
              "id": "timeline",
              "api": {
                "method": "GET",
                "path": "/api/alert/traffic",
                "pathParams": {},
                "queryParams": {
                  "count": 10,
                  "from": 0,
                  "window": "",
                  "filter": "data.rank_alert.trafficFilter$customParam",
                  "date": "date:pathParam"
                }
              }
            }
          ]
        },
        "name": "AlertDetail",
        "attributes": {
          "style": {
            "backgroundColor": "#F7F7F9",
            "width": "250px",
            "flex": "0 0 250px"
          }
        },
        "id": "alert-detail",
        "type": "AlertDetails"
      },
      {
        "meta": {
          "showHeader": true,
          "api": {
            "path": "/api/analytics/graph/{alertId}",
            "pathParams": {
              "alertId": ":pathParam"
            },
            "queryParams": {}
          },
          "title": "Overview"
        },
        "name": "NetworkGraph",
        "attributes": {
          "style": {
            "width": "100%"
          },
          "id": "NetworkGraph"
        },
        "id": "network-graph",
        "type": "NetworkGraph"
      }
    ],
    [
      {
        "id": "alert-activity",
        "type": "AlertMultiChart",
        "meta": {
          "showHeader": true,
          "title": "Activity",
          "showRefresh": false
        },
        "chart": {
          "chartOptions": {
            "xAxisName": "TIME",
            "divLineThickness": "2",
            "lineThickness": "1",
            "showYAxisValues": "1",
            "xAxisNameFontSize": "10",
            "yAxisNameFontSize": "10",
            "labelFontSize": "8",
            "drawAnchors": "1",
            "anchorRadius": "1",
            "showlegend": "0",
            "outCnvBaseFontSize": "8"
          }
        },
        "attributes": {
          "chart": {
            "chartHeight": "200",
            "chartCaption": {
              "display": "none"
            }
          },
          "style": {
            "width": "35%",
            "flexDirection": "column"
          },
          "id": "activity"
        }
      },
      {
        "id": "timeline",
        "type": "Timeline",
        "meta": {
          "showHeader": true,
          "api": null,
          "title": "Timeline"
        },
        "attributes": {
          "type": "traffic",
          "displaySelectedRows": true,
          "noOfEventsPerPage": 10,
          "maxNumbersOnLeftRightPagination": 4,
          "style": {
            "width": "65%",
            "backgroundColor": "#F7F7F9"
          },
          "id": "timeline-component"
        }
      }
    ]
  ]
}
