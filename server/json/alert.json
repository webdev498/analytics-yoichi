{
  "layout": [
    [
      {
        "meta": {
          "showHeader": true,
          "showRefresh": false,
          "showBackButton": true,
          "api": {
            "path": "/api/alert/{alertId}",
            "pathParams": {
              "alertId": ":pathParam"
            },
            "queryParams": {
              "date": "date:pathParam",
              "window": ""
            }
          },
          "title": "Alert Detail",
          "relatedComponents": [
            {
              "id": "alert-activity",
              "api": {
                "default": {
                  "method": "POST",
                  "path": "/api/analytics/reporting/executeById",
                  "body": "data.rank_alert.chartsFilter:fieldName",
                  "pathParams": {},
                  "queryParams": {
                    "window": ""
                  },
                  "hideWhen": {
                    "data.rank_alert.name:fieldName": "anomaly"
                  }
                }
              }
            },
            {
              "id": "timeline",
              "api": {
                "default": {
                  "path": "/api/alert/traffic",
                  "pathParams": {},
                  "queryParams": {
                    "count": 10,
                    "from": 0,
                    "window": "",
                    "date": "date:pathParam",
                    "filter": "data.rank_alert.trafficFilter:fieldName"
                  }
                },
                "anomaly": {
                  "path": "/api/anomaly/{alertId}/timeline",
                  "pathParams": {
                    "alertId": ":pathParam"
                  },
                  "queryParams": {
                    "count": 10,
                    "from": 0,
                    "window": "",
                    "date": "date:pathParam"
                  }
                }
              }
            }
          ]
        },
        "name": "AlertDetail",
        "attributes": {
          "style": {
            "backgroundColor": "#ffffff",
            "width": "250px",
            "flex": "0 0 250px"
          }
        },
        "id": "alert-detail",
        "type": "AlertDetails"
      },
      {
        "meta": {
          "showHeader": true,
          "api": {
            "path": "/api/analytics/graph/{alertId}",
            "pathParams": {
              "alertId": ":pathParam"
            },
            "queryParams": {
              "date": "date:pathParam"
            }
          },
          "title": "Overview"
        },
        "name": "NetworkGraph",
        "attributes": {
          "style": {
            "width": "100%",
            "backgroundSize": "20px 20px",
            "backgroundImage": "linear-gradient(to right, #F1F1F3 1px, transparent 1px), linear-gradient(to bottom, #F1F1F3 1px, #FAFAFB 1px)"
          },
          "canvasStyle": {
            "height": "600px",
            "width": "100%"
          },
          "id": "NetworkGraph"
        },
        "id": "network-graph",
        "type": "NetworkGraph",
        "timelineId": "timeline"
      }
    ],
    [
      {
        "id": "alert-activity",
        "type": "AlertMultiChart",
        "meta": {
          "showHeader": true,
          "title": "Activity",
          "showRefresh": false,
          "api": null,
          "hideComponent": true
        },
        "chart": {
          "chartOptions": {
            "xAxisName": "TIME",
            "divLineThickness": "2",
            "lineThickness": "1",
            "showYAxisValues": "1",
            "xAxisNameFontSize": "10",
            "yAxisNameFontSize": "10",
            "labelFontSize": "8",
            "drawAnchors": "1",
            "anchorRadius": "1",
            "showlegend": "0",
            "outCnvBaseFontSize": "8"
          }
        },
        "attributes": {
          "chart": {
            "chartHeight": "200",
            "chartCaption": {
              "display": "none"
            }
          },
          "style": {
            "width": "35%",
            "flexDirection": "column"
          },
          "id": "activity"
        }
      },
      {
        "id": "timeline",
        "type": "Timeline",
        "meta": {
          "showHeader": true,
          "api": null,
          "title": "Timeline"
        },
        "attributes": {
          "type": "traffic",
          "displaySelectedRows": true,
          "noOfEventsPerPage": 10,
          "maxNumbersOnLeftRightPagination": 4,
          "style": {
            "width": "100%",
            "backgroundColor": "#F7F7F9"
          },
          "chart": {
            "chartWidth": "400",
            "chartHeight": "200",
            "chartCaption": {
              "display": "none"
            }
          },
          "otherStyles": {
            "flex": {
              "display": "flex"
            },
            "pagination": {
              "bottom": 0,
              "position": "absolute"
            }
          },
          "id": "timeline-component"
        },
        "chart": {
          "chartOptions": {
            "xAxisName": "TIME",
            "divLineThickness": "2",
            "lineThickness": "1",
            "showYAxisValues": "1",
            "xAxisNameFontSize": "10",
            "yAxisNameFontSize": "10",
            "labelFontSize": "8",
            "drawAnchors": "1",
            "anchorRadius": "1",
            "showlegend": "0",
            "outCnvBaseFontSize": "8"
          }
        },
        "tabs": {
          "DETAILS": {
            "primary": {
              "path": "/api/alert/traffic",
              "queryParams": {
                "window": "",
                "count": 10,
                "from": 0
              },
              "pathParams": {
              }
            },
            "secondary": {
              "meta": {
                "showHeader": false,
                "api": {
                  "path": "/api/anomaly/{anomalyId}/events",
                  "pathParams": {
                    "selectedCardId": "anomalyId"
                  },
                  "queryParams": {
                    "window": "",
                    "from": 0,
                    "count": 10,
                    "date": ""
                  }
                },
                "title": ""
              },
              "attributes": {
                "type": "anomalyEvents",
                "displaySelectedRows": true,
                "noOfEventsPerPage": 10,
                "maxNumbersOnLeftRightPagination": 4,
                "isMainComponent": false,
                "style": {
                  "width": "100%",
                  "height": "100%",
                  "backgroundColor": "#EBEBEF"
                },
                "otherStyles": {
                  "flex": {},
                  "pagination": {}
                },
                "id": "timeline-contextual-menu"
              },
              "timelineType": "secondary"
            }
          }
        },
        "timelineType": "primary"
      }
    ]
  ]
}
